{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    // be explicit about types included
    // to avoid clashing with Jest types
    "types": ["cypress", "node"],
    "isolatedModules": false
  },
  "include": [
    "**/*.ts",
    "e2e/navigation.cy.tsx",
    "e2e/navigation.cy.tsx",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
